{
  "sections": [
    {
      "fields": [
        {
          "name": "name-fi",
          "type": "text",
          "title": "Tapahtuman nimi",
          "required": true
        }
      ]
    },
    {
      "title": "Ajankohta",
      "fields": [
        {
          "name": "all-day",
          "type": "boolean",
          "title": "Kokopäivän tapahtuma"
        },
        {
          "name": "start-date-time",
          "type": "date-time",
          "title": "Alkamispäivämäärä",
          "required": false,
          "visibleIf": {
            "field": "all-day",
            "notEquals": "checked"
          }
        },
        {
          "name": "start-date-time",
          "type": "date",
          "title": "Alkamispäivämäärä",
          "required": false,
          "visibleIf": {
            "field": "all-day",
            "equals": "checked"
          }
        },
        {
          "name": "end-date-time",
          "type": "date-time",
          "title": "Loppumispäivämäärä",
          "required": false,
          "visibleIf": {
            "field": "all-day",
            "notEquals": "checked"
          }
        },
        {
          "name": "end-date-time",
          "type": "date",
          "title": "Loppumispäivämäärä",
          "required": false,
          "visibleIf": {
            "field": "all-day",
            "equals": "checked"
          }
        }
      ]
    },
    {
      "title": "Tapahtumapaikka",
      "fields": [
        {
          "name": "location",
          "type": "autocomplete",
          "title": "Paikka",
          "required": true,
          "sourceUrl": "/linkedevents/places/search"
        },
        {
          "name": "add-location",
          "type": "html",
          "html": "<strong>Mikäli paikkaa ei löydy haulla voit lisätä uuden klikkaamalla nappia</strong>"
        }
      ]
    },
    {
      "title": "Tapahtuman kuva *",
      "fields": [
        {
          "name": "show-default-images",
          "title": "Näytä oletuskuvat",
          "type": "html"
        },
        {
          "name": "default-image-url",
          "type": "hidden"
        },
        {
          "name": "default-image-html",
          "type": "html",
          "html": "<div class=\"default-images\"></div>",
          "visibleIf": {
            "field": "show-default-images",
            "equals": "checked"
          }
        }
      ]
    },
    {
      "title": "Tapahtuman järjestäjän tiedot",
      "fields": [
        {
          "title": "Järjestäjä",
          "name": "provider-fi",
          "type": "text",
          "required": true
        },
        {
          "title": "Puhelinnumero",
          "name": "provider-phone",
          "type": "text",
          "required": false
        },
        {
          "title": "Sähköpostiosoite",
          "name": "provider-email",
          "type": "email",
          "required": false
        }
      ]
    },
    {
      "title": "Vastuuhenkilön tiedot",
      "fields": [
        {
          "title": "Vastuuhenkilö",
          "name": "responsible-fi",
          "type": "text",
          "required": true
        },
        {
          "title": "Puhelinnumero",
          "name": "responsible-phone",
          "type": "text",
          "required": true
        },
        {
          "title": "Sähköpostiosoite",
          "name": "responsible-email",
          "type": "email",
          "required": true
        }
      ]
    },
    {
      "title": "Tapahtuman kuvaus",
      "fields": [
        {
          "name": "description-fi",
          "type": "memo",
          "title": "Kuvaus",
          "required": true
        }
      ]
    },
    {
      "title": "Hinta",
      "fields": [
        {
          "name": "has-price",
          "type": "boolean",
          "title": "Pääsymaksu"
        },
        {
          "name": "price-fi",
          "type": "memo",
          "title": "Hintatietojen kuvaus",
          "required": false,
          "placeholder": "Esimerkki: 10 euroa, maksetaan paikanpäälle.",
          "visibleIf": {
            "field": "has-price",
            "equals": "checked"
          }
        },
        {
          "name": "free-price-fi",
          "type": "memo",
          "title": "Hintatietojen kuvaus",
          "required": false,
          "placeholder": "Esimerkki: 10 euroa, maksetaan paikanpäälle.",
          "visibleIf": {
            "field": "has-price",
            "notEquals": "checked"
          }
        },
        {
          "name": "price-url",
          "type": "url",
          "title": "Linkki lipunmyyntisivulle",
          "placeholder": "http://www verkkosivun osoite",
          "required": false
        }
      ]
    },
    {
      "title": "Tapahtumaluokat *",
      "name": "keywords",
      "fields": []
    },
    {
      "title": "Tapahtuman ilmoittautuminen",
      "fields": [
        {
          "name": "is_registration",
          "type": "boolean",
          "title": "Pakollinen ilmoittautuminen"
        },
        {
          "name": "no-registration-fi",
          "type": "memo",
          "title": "Ilmoittautuminen",
          "required": false,
          "visibleIf": {
            "field": "is_registration",
            "equals": "checked"
          }
        },
        {
          "name": "registration-fi",
          "type": "memo",
          "title": "Ilmoittautuminen",
          "required": false,
          "visibleIf": {
            "field": "is_registration",
            "notEquals": "checked"
          }
        },
        {
          "name": "registration_url",
          "type": "url",
          "title": "Linkki ilmoittautumissivulle",
          "placeholder": "http://www verkkosivun osoite",
          "required": false
        },
        {
          "name": "submit-event",
          "type": "submit",
          "text": "Luo tapahtuma"
        },
        {
          "name": "submit-copy-event",
          "type": "submit",
          "text": "Luo ja kopioi tapahtuma"
        }
      ]
    }
  ]
}